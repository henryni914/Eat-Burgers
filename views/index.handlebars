<div class='nav'>
  <h1 class='notification has-text-centered is-size-4 has-background-warning'>Are you hungry for a burger?</h1>
</div>


<div class='container'>
  <div class='columns'>
    <div class='column has-text-centered is-size-5 has-text-white'>
      <h2 class='has-text-weight-bold'>Types of Burgers</h2>

      <ul>
        {{#each burgers}}
        {{#unless eaten}}
        {{> burgers/burger-block eat=true}}
        {{/unless}}
        {{/each}}
      </ul>
    </div>

    <div class='column has-text-centered is-size-5 has-text-white'>
      <h2 class='has-text-weight-bold'>Add a Burger</h2>
      <form class="create-form">

        <div class="form-group">
          <label for="ca">Type of Burger:</label>
          <input type="text" id="ca" name="name">
          <button type="submit">Add Burger</button>
        </div>
    </div>

    <div class='column has-text-centered is-size-5 has-text-white'>
      <h2 class='has-text-weight-bold'>Burgers Eaten</h2>
      <ul>
        {{#each burgers}}
        {{#if eaten}}
        {{> burgers/burger-block eat=false}}
        {{/if}}
        {{/each}}
      </ul>
    </div>
    </form>
  </div>
</div>