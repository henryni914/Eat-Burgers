<div class='container navbar'>
  <h1>Are you hungry for a burger?</h1>
</div>

<div class='container columns'>
  <div class='column'>
    <h2>Types of Burgers</h2>

    <ul>
      {{#each burgers}}
      {{#unless eaten}}
      {{> burgers/burger-block eat=true}}
      {{/unless}}
      {{/each}}
    </ul>
  </div>

  <div class='column'>
    <h2>Add a Burger</h2>
    <form class="create-form">

      <div class="form-group">
        <label for="ca">Type of Burger:</label>
        <input type="text" id="ca" name="name">
        <button type="submit">Add Burger</button>
      </div>
  </div>

  <div class='column'>
    <h2>Burgers Eaten</h2>
    <ul>
      {{#each burgers}}
      {{#if eaten}}
      {{> burgers/burger-block eat=false}}
      {{/if}}
      {{/each}}
    </ul>
  </div>
  </form>

</div>